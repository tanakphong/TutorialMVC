@model List<TuturialMVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Desc</th>
        <th>Price</th>
        <th>Image</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Desc</td>
            <td>@item.Price</td>
            <td><img src="@item.Url" height="100"/></td>
        </tr>
    }


</table>
